{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "noEmit": false,
    "incremental": true,
    "declaration": true,
    "paths": {
      // "@types": ["./types/index"],
      // "@lib": ["./lib1/index"],
      // "@components": ["./components/index"],
      "@ajabhijeet21-internal/ts-utils": [
        "../../../packages/ts-utils/src/index"
      ],
      "@ajabhijeet21-internal/ui-lib/*": ["./*"]
    },
    "types": ["@testing-library/jest-dom/vitest"]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/*",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "dist"
  ],
  "include": [
    ".eslintrc.*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ]
}
